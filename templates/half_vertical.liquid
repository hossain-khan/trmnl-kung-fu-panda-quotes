<div class="layout">
  <div class="grid">
    <div class="col col--center gap--small">
      <div class="row row--center">
        {% if movie == "Kung Fu Panda" %}
          <img class="image image--contain" src="{{ poster_kfp_1 }}" height="130px" />
        {% elsif movie == "Kung Fu Panda 2" %}
          <img class="image image--contain" src="{{ poster_kfp_2 }}" height="130px" />
        {% elsif movie == "Kung Fu Panda 3" %}
          <img class="image image--contain" src="{{ poster_kfp_3 }}" height="130px" />
        {% elsif movie == "Kung Fu Panda 4" %}
          <img class="image image--contain" src="{{ poster_kfp_4 }}" height="130px" />
        {% endif %}
      </div>
      <div class="text--black">
