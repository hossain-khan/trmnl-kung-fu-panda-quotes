<div class="layout">
  <div class="grid gap--medium">
    <div class="col--span-1 col col--center">
      {% if movie == "Kung Fu Panda" %}
        <img class="image image--contain" src="{{ poster_kfp_1 }}" height="180px" />
      {% elsif movie == "Kung Fu Panda 2" %}
        <img class="image image--contain" src="{{ poster_kfp_2 }}" height="180px" />
      {% elsif movie == "Kung Fu Panda 3" %}
        <img class="image image--contain" src="{{ poster_kfp_3 }}" height="180px" />
      {% elsif movie == "Kung Fu Panda 4" %}
        <img class="image image--contain" src="{{ poster_kfp_4 }}" height="180px" />
      {% endif %}
    </div>
    <div class="col--span-2 col col--center text--black">
      <span class="value value--xxxlarge" style="font-family: 'Courier New', monospace; font-weight: bold; word-wrap: break-word; overflow-wrap: break-word;" data-value-fit="true" data-value-fit-max-height="130"><img class="image" height="18px" width="18px" src='{{ opening_quote }}' style="vertical-align: top;">{{ text }}<img class="image" height="18px" width="18px" src='{{ closing_quote }}' style="vertical-align: top;"></span>
      <span class="description text--right pt--xsmall" style="font-family: 'Courier New', monospace;">â€” {{ author }}</span>
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="{{ icon_kfp }}">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
